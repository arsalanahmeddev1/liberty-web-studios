            <input
              type="email"
              placeholder="Email"
              class="input-field footer-input"
            />
            <Button
              label="Subscribe Us"
              className="absolute top-[50%] right-[5px] translate-y-[-50%] py-[9px] px-[32px] text-[20px] rounded-[60px] border border-[#FFBD53] bg-[#FF712B] text-white mb-[80px]"
